<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>

        <!-- SQL dialect -->
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>

        <!-- Driver for DB database -->
        <property name="javax.persistence.jdbc.driver">com.mysql.jdbc.Driver</property>
        <!-- URL for DB -->
        <property name="javax.persistence.jdbc.url">jdbc:mysql://localhost/ftmdb</property>
        <!-- Username -->
        <property name="javax.persistence.jdbc.user">root</property>
        <!-- Password -->
        <property name="javax.persistence.jdbc.password">root</property>

        <!-- Echo all executed SQL to stdout -->
        <property name="show_sql">true</property>

        <mapping class="com.example.ftm.entity.Player"/>

    </session-factory>
</hibernate-configuration>